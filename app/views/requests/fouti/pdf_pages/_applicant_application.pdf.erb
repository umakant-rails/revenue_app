<!-- aavedak application patra -->
<div class="row pdf alwaysbreak">
  <div class="col-md-12">
    <div class="row mrgn-top-20 mrgn-4">
      <div class="<%= @templates[:applicant_application] %>">
        <div class="">प्रति,<br/></div>
        <div class="fnt-b">
          <div class="txt-indent-2 fnt-b">
            श्रीमान तहसीलदार/नायब तहसीलदार महोदय
          </div>
          <div class="txt-indent-2">
            वृत्त:- <%= request.village.ri %> तहसील <%= request.village.tehsil %>
          </div>
        </div>
        <div class="">
          <strong>विषय &nbsp;:- </strong> फौती / नामांतरण वाबत |<br/>
        </div>
        
        <div class="">
          महोदय  जी,<br/>
        </div>

        <div class="txt-indent-2">
          <% dead_persons = request.participants.fout_person %>
          विनम्र निवेदन है कि  मैं <%= raw applicant_name(request, true) %> पटवारी हल्का न <strong><%= request.village.halka_number %></strong> का निवासी हूँ और मौजा <strong><%= request.village.village %></strong> पटवारी हल्का न <strong><%= request.village.halka_number %></strong> रा. नि. म. <strong><%= request.village.ri %></strong> तहसील <strong><%= request.village.tehsil %></strong> में मेरे पिता/माता/अन्य  

          <%=raw dead_persons.collect{ |p| [participant_name(p)] }.join(", ") %> के नाम पर <%= raw khasra_description(request) %> पर दर्ज है, जो कि दिनांक <%= 'क्रमशः' if dead_persons.length > 1 %> <strong><%= dead_persons.collect{ |p| [format_dt(p.death_date)] }.join(", ") %></strong>

          को फौत हो चुके है जिनके वैध वारसान निम्न संजरा अनुसार है :-
        </div>
         <% request && dead_persons.each do | f_person | %>
          <%=raw participant_name(f_person)%> के वारसान का संजरा निम्नानुसार है :-
          <%= render "requests/fouti/pdf_pages/#{@templates[:sanjara_praroop]}/sanjara", request: request, fout_person: f_person, action_display: false %>
        <% end %>
        <div>
          उपरोक्त संजरा में उल्लिखित वारिसों के अलावा कोई अन्य वारसान नहीं है यदि भविष्य में कोई दावा करता है और ऐसी पुष्टि होती है तो मैं स्वयं व्यक्तिगत रूप से जिम्मेदार माना जाऊंगा अन्य कोई नहीं |  <br/> 
        </div>
        <br/><br/>
        <div class="">
          <div class="fLeft">
            <center>&nbsp;</center>
            <center>दिनांक :- _ _ _ _ _ _ _ _</center>
          </div>
          <div class="fRight">
            <center>आवेदक</center>
            <center>नाम :- <%=raw applicant_name(@request) %></center>
            <center>निवासी :- <strong><%= @request.participants.applicant.address %></strong></center>
          </div>
        </div> 
      </div>
    </div>
  </div>
</div>
