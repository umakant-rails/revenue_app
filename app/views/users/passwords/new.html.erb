<div class="row mt-5">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
            <div class="m-sm-3">
              <h5 class="title text-center">
                <strong>Forget Your Password</strong>
              </h5>
              <hr>
              <div class="form-group">
                <div class="col-sm-12 no-padding">
                  <% if resource.errors.messages.present? %>
                    <div class="input-group alert alert-danger">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="font-size: 15px;">Ã—</button>
                      <%= get_errors(resource.errors.messages) %>
                    </div>
                  <% end %>
                </div>
              </div>              
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <%= f.text_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: 'Email' %> 
              </div>
              <div class="row">
                <div class="col-md-12">
                  <%= f.submit "Send me reset password instructions", class: "btn btn-primary form-control"%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-md-12">
                  <%= render "users/shared/links" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>